<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.crs.clothes_r_us.MENSActivity"
    android:background="@color/linen"
    tools:showIn="@layout/app_bar_mens">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNew"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="\nNew Items"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="30sp"
                android:textStyle="bold|italic" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                />

            <ListView
                android:id="@+id/lvNew"
                android:layout_width="match_parent"
                android:layout_height="931dp">

            </ListView>

            <TextView
                android:id="@+id/textHot"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="\nHot Items"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="30sp"
                android:textStyle="bold|italic" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider"
                />

            <ListView
                android:id="@+id/lvHot"
                android:layout_width="match_parent"
                android:layout_height="931dp" />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_nv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/nav_mens"></android.support.design.widget.BottomNavigationView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
